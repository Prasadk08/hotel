<% layout('/layout/boilerplate') -%>

<style>
  body {
      background-color: #f8f9fa;
  }
  .shadow-lg {
      box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
  }
  .btn-decor:hover {
      background-color: #0d6efd !important;
      color: #fff !important;
      border-color: #0d6efd !important;
      transition: all 0.3s ease;
  }
</style>

    <div class="row mt-5">
        <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 shadow-lg p-4 rounded bg-light">
            <h1 class="text-center mb-4 text-primary">Create Your Hotel Account</h1>
            <form method="POST" action="/signupform/<%= id %>" novalidate class="needs-validation" enctype="application/x-www-form-urlencoded">
                <div class="mb-3">
                    <label for="title" class="form-label">Hotel Name</label>
                    <input type="text" name="manager[hotelname]" class="form-control border-primary shadow-sm" placeholder="Enter Hotel Name" required>
                    <div class="invalid-feedback">Please enter a valid hotel name.</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Owner Name</label>
                    <input type="text" name="manager[ownername]" class="form-control border-primary shadow-sm" placeholder="Enter Owner Name" required>
                    <div class="invalid-feedback">Please enter the owner's name.</div>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Phone Number</label>
                    <input type="number" name="manager[phno]" class="form-control border-primary shadow-sm" placeholder="Enter Phone Number" required>
                    <div class="invalid-feedback">Please enter a valid phone number.</div>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Total Number of Sections</label>
                    <input type="number" id="totalsections" name="manager[totalsection]" class="form-control border-primary shadow-sm" placeholder="Enter Total Sections" required>
                    <div class="invalid-feedback">Please enter the total number of sections.</div>
                </div>
                <div id="inputform2"></div>
                <br>
                <button class="btn btn-primary w-10 py-2 shadow">Submit</button>
            </form>
        </div>
    </div>

<script src="/js/dynamicfield.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
