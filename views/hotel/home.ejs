<style>
  .carousel, .carousel-inner, .carousel-item, .carousel img {
    width: 100vw; /* Full viewport width */
    height: 100vh; /* Full viewport height */
    object-fit: cover; /* Ensures images fully cover the area */
    z-index: -1; /* Positions the image behind overlay text */
  }
  
  .overlay-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: #fff;
    text-shadow: 1px 1px 10px rgba(0, 0, 0, 0.7); /* Enhanced shadow for readability */
    z-index: 1; /* Ensures overlay text is above carousel images */
    text-align: center;
  }
  
  .carousel-caption h1 {
    font-size: 4rem; /* Adjust for better visibility */
    font-weight: bold;
    margin-bottom: 1rem;
  }
  
  .carousel-caption p {
    font-size: 1.8rem;
  }

  /* Additional Styling to Ensure Layout Completeness */
  .container {
    padding-top: 0;
    padding-left: 0;
    max-width: 100%; /* Ensure container doesn't interfere with full width */
  }
  @media only screen and (max-width:431px) {
    .carousel, .carousel-inner, .carousel-item, .carousel img{
      height: 32vh;
    }
    .carousel-caption h1 {
    font-size: 27px;
    font-weight: bold;
    margin-bottom: 0.8rem;
  }
  .carousel-caption p {
    font-size: 0.8rem;
}
}
