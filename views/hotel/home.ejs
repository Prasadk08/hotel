<h2 class="table-title">Waiter Status</h2>
<% if(allwaiterdata.length>0) {%>
    <table class="styled-table">
        <thead>
            <tr>
                <th>Sr. No</th>
                <th>Waiter Name</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            <% let count=1 %>
            <% for(let data of allwaiterdata){ %>
                <tr>
                    <td><%= count++ %></td>
                    <td><%= data.name %></td>
                    <% if(data.myservings.length==0) {%>
                        <td class="status-available">Available</td>
                    <% }else{ %>
                        <td class="status-serving">Serving</td>
                    <% } %>
                </tr>
            <% } %>
        </tbody>
    </table>
<% }else{ %>
    <h2 class="no-waiters">Please add some waiters first</h2>
<% } %>

