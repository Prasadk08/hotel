<% layout('/layout/boilerplate2') -%>


<style>
  body {
    background-color: #fcf6bd;
}

.main-title {
    list-style: none !important;
    background-color: #ff9500 !important;
    color: black !important;
    height: 42px !important;
    display: flex !important;
    justify-content: center !important;
    align-items: center !important;
    font-size: 1.3rem !important;
    font-weight: bolder !important;
    border-radius: 4px !important;
}

.list {
    background-color: #f5cb5c !important;
    list-style: none !important;
    display: flex !important;
    justify-content: space-between; /* Adjusted for spacing */
    border-bottom: 2px solid white !important;
    align-items: center !important;
    height: 50px !important;
    font-size: 1.1rem !important;
    color: black !important;
    font-weight: bold !important;
    padding: 0 15px; /* Added padding for spacing */
    box-sizing: border-box; /* Ensures padding is included in element width/height */
}

.counter-container {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #ef233c;
    border-radius: 20px;
    padding: 5px 10px;
    gap: 5px;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    width: 90px;
    height: 30px;
}

.counter-container button {
    background-color: #ef233c; /* Red color for buttons */
    border: none;
    color: white;
    font-size: 1.2rem;
    border-radius: 50%;
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    outline: none;
    transition: background-color 0.3s ease;
}


.counter-container input {
    border: none;
    width: 23px;
    text-align: center;
    font-size: 1.2rem;
    background-color: #ef233c;
    color: white;
    padding: 5px;
    margin: 0 5px;
    height: inherit;

}

.add-btn {
    background-color: rgb(227, 55, 69);/* Orange color for the Add button */
    border: none;
    color: white;
    font-size: 1rem;
    border-radius: 5px;
    padding: 5px 10px;
    cursor: pointer;
    outline: none;
    transition: background-color 0.3s ease;
}
.btn-decor{
    margin: 10px 10px;
    background-color: #fe424d !important;
    color: white!important;
    border: none!important;
}

</style>
<h2 style="text-align: center;">Showing Menu Card</h2>
<form action="/kitchen/placeorder" method="post">
    <div class="row">
        <div class="col-8 offset-2">
            <div class="mb-2">
                <label for="title" class="form-label">Enter Table No. </label>
                <input type="text" name="listing[title]" class="form-control" placeholder="Enter Table No. " required>
                <div class="invalid-feedback">Please enter a Table No.</div>
            </div>
     
<!-- Menu Card HTML -->
<% for (data of foodCategory) { %>
    <div class="row col-8 offset-2">
        <ul class="list-group col">
            <li class="list-group-item main-title" aria-current="true"><%= data.toUpperCase() %></li>
            <% for (item of hotelmenucard[data]) { %>
                <li class="list" data-foodid="<%= item.id %>" data-foodtype="<%= data %>">
                    <span><%= item.foodname.toUpperCase() %></span>
                    <span>&#8377;<%= item.foodprice %></span>
                    <button class="btn add-btn" onclick="demo(event)">Add</button>
                    <div class="counter-container" style="display: none;">
                        <button class="minus-btn">-</button>
                        <input type="text" class="counter-input" value="1" readonly />
                        <button class="plus-btn">+</button>
                    </div>
                </li>
            <% } %>
        </ul>
    </div>
<% } %>


    <button id="placeorder" type ="submit" class="btn btn-primary btn-decor">Place Order</button>
</div>
</div>
</form>

<script src="/js/order.js"></script>