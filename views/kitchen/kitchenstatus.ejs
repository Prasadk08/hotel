<% layout('/layout/boilerplate2') -%>

<style>
    body {
        background-color: #fcf6bd;
    }
    .main-title {
        list-style: none !important;
        background-color: #ff9500!important;
        color: black!important;
        height: 42px !important;
        display: flex !important;
        justify-content: center !important;
        align-items: center !important;
        font-size: 1.3rem !important;
        font-weight: bolder !important;
        border-radius: 2px !important;
    }
    .list {
        background-color: #f5cb5c !important;
        list-style: none !important;
        display: flex !important;
        justify-content: space-evenly; /* Adjusted for spacing */
        border-bottom: 2px solid white !important;
        align-items: center !important;
        height: 40px !important;
        font-size: 1.1rem !important;
        color: black!important;
        font-weight: bold !important;
        padding: 0 10px; /* Added padding for spacing */
        box-sizing: border-box; /* Ensures padding is included in element width/height */
    }
</style>

<div class="row">
    <div class="col-6"><h1>Current orders</h1></div>
</div>

<div class="row">
    <% for(data of foodCategory){ %>
        <ul class="list-group col">
            <li class="list-group-item main-title active" aria-current="true"><%= data.toUpperCase() %></li>
                <% for(item of sortedObjects[data]){ %>
                    <li class="list">
                        <span><%= item.foodname.toUpperCase() %></span>
                        <span>&#x2715;<%= item.foodquantity %></span>
                    </li>
                <% } %>
        </ul>
    <% } %>
</div>