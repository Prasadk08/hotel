<% layout('/layout/boilerplate2') -%>
<h2 style="text-align: center; padding: 20px 0 !important;">Showing Menu Card</h2>

<style>
    body {
        background-color: #fcf6bd;
    }
    .main-title {
        list-style: none !important;
        background-color: #fb5607!important;
        color: white!important;
        height: 42px !important;
        display: flex !important;
        
        justify-content: center !important;
        align-items: center !important;
        font-size: 1.3rem !important;
        font-weight: 500 !important;
        border-radius: 2px !important;
    }
    .list {

        list-style: none !important;
        display: flex !important;
        justify-content: space-evenly; /* Adjusted for spacing */
        border-bottom: 2px solid white !important;
        align-items: center !important;
        height: 40px !important;
        font-size: 17px!important;
        color: black!important;
        font-weight: 500 !important;
        padding: 0 10px; /* Added padding for spacing */
        box-sizing: border-box; /* Ensures padding is included in element width/height */
    }
    @media only screen and (max-width: 431px) {
    .list{
        font-size: 12px !important;
    }
    .main-title{
        font-size: 0.8rem !important;
    }
  }
</style>



<!-- Menu Card HTML -->
<% for (data of foodCategory) { %>
    <div class="row col-8 offset-2">
        <ul class="list-group col">
            <li class="list-group-item main-title" aria-current="true"><%= data.toUpperCase() %></li>
            <% for (item of hotelmenucard[data]) { %>
                <li class="list">
                    <span><%= item.foodname.toUpperCase() %></span>
                    <span>&#8377;<%= item.foodprice %></span>
                </li>
            <% } %>
        </ul>
    </div>
<% } %>
